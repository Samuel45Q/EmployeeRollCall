<?xml version="1.0" encoding="utf-8"?>
<font-family
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Declare attributes using the android: and app: namespaces to ensure backwards compatibility -->
    <font
        android:font="@font/avenir_bold"
        android:fontStyle="normal"
        android:fontWeight="700"
        app:font="@font/avenir_bold"
        app:fontStyle="normal"
        app:fontWeight="700" />

    <font
        android:font="@font/avenir_bold_italic"
        android:fontStyle="italic"
        android:fontWeight="700"
        app:font="@font/avenir_bold_italic"
        app:fontStyle="italic"
        app:fontWeight="700" />

    <font
        android:font="@font/avenir_demi"
        android:fontStyle="normal"
        android:fontWeight="600"
        app:font="@font/avenir_demi"
        app:fontStyle="normal"
        app:fontWeight="600" />

    <font
        android:font="@font/avenir_demi_italic"
        android:fontStyle="italic"
        android:fontWeight="600"
        app:font="@font/avenir_demi_italic"
        app:fontStyle="italic"
        app:fontWeight="600" />

    <font
        android:font="@font/avenir_heavy"
        android:fontStyle="normal"
        android:fontWeight="900"
        app:font="@font/avenir_heavy"
        app:fontStyle="normal"
        app:fontWeight="900" />

    <font
        android:font="@font/avenir_heavy_italic"
        android:fontStyle="italic"
        android:fontWeight="900"
        app:font="@font/avenir_heavy_italic"
        app:fontStyle="italic"
        app:fontWeight="900" />

    <font
        android:font="@font/avenir_light"
        android:fontStyle="normal"
        android:fontWeight="300"
        app:font="@font/avenir_light"
        app:fontStyle="normal"
        app:fontWeight="300" />

    <font
        android:font="@font/avenir_light_italic"
        android:fontStyle="italic"
        android:fontWeight="300"
        app:font="@font/avenir_light_italic"
        app:fontStyle="italic"
        app:fontWeight="300" />

    <font
        android:font="@font/avenir_medium"
        android:fontStyle="normal"
        android:fontWeight="500"
        app:font="@font/avenir_medium"
        app:fontStyle="normal"
        app:fontWeight="500" />

    <font
        android:font="@font/avenir_medium_italic"
        android:fontStyle="italic"
        android:fontWeight="500"
        app:font="@font/avenir_medium_italic"
        app:fontStyle="italic"
        app:fontWeight="500" />

    <font
        android:font="@font/avenir_regular"
        android:fontStyle="normal"
        android:fontWeight="400"
        app:font="@font/avenir_regular"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <font
        android:font="@font/avenir_regular_italic"
        android:fontStyle="italic"
        android:fontWeight="400"
        app:font="@font/avenir_regular_italic"
        app:fontStyle="italic"
        app:fontWeight="400" />

    <font
        android:font="@font/avenir_thin"
        android:fontStyle="normal"
        android:fontWeight="200"
        app:font="@font/avenir_thin"
        app:fontStyle="normal"
        app:fontWeight="200" />

    <font
        android:font="@font/avenir_thin_italic"
        android:fontStyle="italic"
        android:fontWeight="200"
        app:font="@font/avenir_thin_italic"
        app:fontStyle="italic"
        app:fontWeight="200" />

    <font
        android:font="@font/avenir_ultrathin"
        android:fontStyle="normal"
        android:fontWeight="100"
        app:font="@font/avenir_ultrathin"
        app:fontStyle="normal"
        app:fontWeight="100" />

    <font
        android:font="@font/avenir_ultrathin_italic"
        android:fontStyle="italic"
        android:fontWeight="100"
        app:font="@font/avenir_ultrathin_italic"
        app:fontStyle="italic"
        app:fontWeight="100" />

</font-family>